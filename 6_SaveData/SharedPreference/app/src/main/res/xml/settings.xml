<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="notification"
        app:title="알림설정">
        <SwitchPreferenceCompat
            app:key="sp_key_notification_state"
            app:title="메시지 알림" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="etc"
        app:title="기타설정">
        <EditTextPreference
            app:key="sp_key_id"
            app:title="ID 설정" />
        <ListPreference
            android:entries="@array/my_color"
            app:entryValues="@array/my_color_values"
            app:key="sp_key_color"
            app:title="색상 선택" />
    </PreferenceCategory>
</PreferenceScreen>